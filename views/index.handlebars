<div class="container">
  <!--Jumbotron-->
  <div class="jumbotron text-center bg-primary text-white">
    {{!-- <h1 class="display-4" id="app-title">Awesome Burger <img src="/assets/img/cheeseburger.png"></h1> --}}
    <p class="lead">Welcome to Burger World.</p>
  </div>

  <div class="row">
    <div class="col-md-12">
      <div class="card border border-primary">
        <div class="card-header bg-primary text-white">
         What type of burger would you like to try?
        </div>
        <!--Create/add burger form-->
        <div class="card-body">
          <form class="create-form">
            <div class="form-group">
              <label for="burger">Place your burger here:</label>
              <input type="text" class="form-control" id="burgerOrder" placeholder="">
            </div>
            <button class="btn btn-primary" type="submit">Submit</button>
          </form>
        </div>
      </div>
    </div>
  </div>


  <div class="row mt-4">
    <div class="col-md-6 mt-4">
      <div class="card border border-primary">
        <div class="card-header bg-primary text-white">
         Burgers Wish List
        </div>
        <!--Div to hold burgers that have not been ate yet-->
        <div class="card-body">
              {{#each burgers}}
                {{#unless devoured}}
                  {{> burgers/burger-block devour=false}}
                {{/unless}}
              {{/each}}
        </div>
      </div>
    </div>

    <div class="col-md-6 mt-4">
      <div class="card devoured-card">
        <div class="card-header text-white" id="devoured-card-header">
         Burgers Ate
        </div>
        <!--When a burger has been ate, put burger in trash section-->
        <div class="card-body">
          {{#each burgers}}
              {{#if devoured}}
                {{> burgers/burger-delete devour=true}}
              {{/if}}
          {{/each}}
        </div>
      </div>
    </div>
  </div>